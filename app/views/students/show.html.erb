<div class="well">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Github Username</th>
        <th>Cohort</th>
        <th>edit/delete</th>
      </tr>
    </thead> 
    <tbody>
      <td><%= @student.name  %></td>
      <td><%= @student.email %></td>
      <td><%= link_to @student.github_username, "http://www.github.com/#{@student.github_username}", :target => "_blank" %></td>
      <td><%= link_to(@cohort.name, cohort_path(@cohort)) %></td>
      <td id="edit-or-delete-user">
      <%= link_to 'edit', edit_student_path(@student), class: 'btn btn-default btn-xs' %>
      <%= link_to 'delete', student_path(@student), class: 'btn btn-default btn-xs', method: 'delete', data: {confirm: "Are you sure you want to delete this student?"} %>
    </td>
    </tbody>
  </table>
</div>